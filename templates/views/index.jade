		.wrapper.wrapper--default
			h1 Sé parte de la comunidad que está cambiando a México
			.search
				.col.one-quarter
					.dropdown.dropdown--causes
						.dropdown__title ¿Qué causa quieres apoyar?
							i.icon-chevron-down
						.dropdown__menu
							ul
								if causes
									each cause in causes
										li: span= cause.name
				.col.one-fifth
					.dropdown.dropdown--states
						.dropdown__title ¿En qué estado?
							i.icon-chevron-down
						.dropdown__menu
							ul
								if states
									each state in states
										li.state(data-content= state.id): span= state.name
				.col.one-fifth
					.dropdown.dropdown--cities.disabled
						.dropdown__title ¿En qué ciudad?
							i.icon-chevron-down
						.dropdown__menu
							ul
	section.campaigns
		.wrapper.wrapper--default
			#campaigns
				if campaigns
					each campaign, i in campaigns
						if i === 0
							a(href="/campaign/" + campaign.key).campaign.col.one-half
								.campaign__img
									img(src= campaign._.photo.fill(750,755), alt="")
								.campaign__details
									h3.title--md= campaign.name
									p= campaign.description
						else 
							a(href="/campaign/" + campaign.key).campaign.campaign--sm.col.one-quarter
								.campaign__img
									img(src= campaign._.photo.fill(350,350), alt="")
								.campaign__details
									h3.title--sm= campaign.name
									p= campaign.description
	section.sponsors
		h2 Patrocinadores
		if sponsors
			each sponsor in sponsors
				div(class="sponsor sponsor--" + sponsor.key)
					img(src= sponsor._.logo.fit(150,80))
